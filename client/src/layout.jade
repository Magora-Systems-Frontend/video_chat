doctype html
html(lang="en" ng-app="videoChat")
    head
        base(href="/")
        meta(charset="UTF-8")
        include copyright
        style(type='')
            include ../bower_components/bootstrap/dist/css/bootstrap.min.css
            include ../bower_components/adminlte/dist/css/AdminLTE.min.css
            include ../bower_components/adminlte/dist/css/skins/_all-skins.min.css
            include ../public/application.css
    body.skin-blue.sidebar-mini
        div.wrapper
            header.main-header
                a.logo(href="#")
                    span.logo-mini
                        b A
                        span LT
                    span.logo-lg
                        b Admin LTE
                nav.navbar.navbar-default
                    div.container-fluid
                        div.navbar-header
                            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href="#") Video chat
            div.content-wrapper(ui-view, style="margin-left: 0")

        script(type='text/javascript')
            include ../bower_components/angular/angular.min.js
            include ../bower_components/angular-resource/angular-resource.min.js
            include ../bower_components/angular-bootstrap/ui-bootstrap.min.js
            include ../bower_components/angular-ui-router/release/angular-ui-router.min.js
        script(type='text/javascript')
            include ../bower_components/socket.io-client/socket.io.js
        script(type='text/javascript')
            include ../bower_components/angular-socket-io/socket.min.js
        script(type='text/javascript')
            include ../public/application.js
            include ../public/templates.js
